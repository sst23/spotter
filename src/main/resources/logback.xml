<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="STDOUT"/>
	</root>

	<logger name="io.micronaut.context" level="WARN"/>
	<logger name="io.micronaut.core.reflect" level="WARN"/>
	<logger name="io.micronaut.web" level="WARN"/>
	<logger name="io.micronaut.http" level="WARN"/>
	<logger name="io.micronaut.core.beans" level="WARN"/>
	<logger name="io.netty" level="WARN"/>
	<logger name="io.micronaut.http.client" level="INFO"/>
</configuration>
